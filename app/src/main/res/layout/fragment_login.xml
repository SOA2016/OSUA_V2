<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/input_loginServerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="SERVER-ADDRESS"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:layout_marginTop="5dp"
                android:textColor="#cecece"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <Spinner
                android:layout_below="@id/input_loginServerLabel"
                android:id="@+id/input_loginServerSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="11dp"
                android:entries="@array/serverPrefixes"
                />

            <EditText
                android:id="@+id/input_loginServer"
                android:layout_toRightOf="@id/input_loginServerSpinner"
                android:layout_below="@id/input_loginServerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:theme="@style/ColorEditTextStyle"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="USER-NAME"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textColor="#cecece"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <EditText
            android:id="@+id/input_loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:theme="@style/ColorEditTextStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="USER-PROJECT"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textColor="#cecece"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <EditText
            android:id="@+id/input_loginProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:theme="@style/ColorEditTextStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="USER-PASSWORD"
            android:textStyle="bold"
            android:textColor="#cecece"
            android:paddingLeft="4dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <EditText
            android:id="@+id/input_loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:theme="@style/ColorEditTextStyle"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ProgressBar
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/progressBar"
                    android:foregroundGravity="center"
                    android:indeterminate="true"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="Login"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:id="@+id/loginButton"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    style="@style/buttonStyle"
                    android:theme="@style/buttonStyle"/>

            </RelativeLayout>
    </LinearLayout>
</ScrollView>
