<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="buttonStyle">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonStyleGrey">
        <item name="colorButtonNormal">@color/mediumgrey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fab">
        <item name="android:tint">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbarNormal">
        <item name="android:textColorPrimary">@color/lightgrey</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="toolbarSearch">
        <item name="android:background">@color/white</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@color/white</item>
        <item name="android:color">@color/black</item>
    </style>



    <style name="EditText">
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->

        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/darkgrey</item>
        <item name="colorSwitchThumbNormal">@color/mediumgrey</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <!--<item name="android:colorForeground">@color/colorAccent</item>-->

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="Color1SwitchStyle">

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->


        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorSwitchThumbNormal">@color/palette_500</item>
        <item name="android:colorForeground">@color/mediumgrey</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="headline">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="attributeTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="attribute">
        <item name="android:textSize">16sp</item>
        <item name="android:maxWidth">50dp</item>
    </style>

</resources>
